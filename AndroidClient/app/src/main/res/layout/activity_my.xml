<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MyActivity"
    android:background="#ffa7ceff">

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="NÃºmero de transacciones"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:digits="0123456789" />



    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consumir"
        android:id="@+id/bSend"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/etMessage"
        android:layout_alignRight="@+id/etMessage"
        android:layout_alignEnd="@+id/etMessage" />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Producir"
        android:id="@+id/bReceiving"
        android:layout_alignTop="@+id/bSend"
        android:layout_alignLeft="@+id/etMessage"
        android:layout_alignStart="@+id/etMessage" />


</RelativeLayout>

