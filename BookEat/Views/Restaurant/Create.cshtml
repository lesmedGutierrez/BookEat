            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cuisine, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Cuisine, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Cuisine)
            </div>
        </div>

        <div class="form-group">
